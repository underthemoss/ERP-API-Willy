# MongoDB Configuration
MONGO_CONNECTION_STRING=mongodb://localhost:27017/es-erp
GLOBAL_LIBRARY_DB_NAME=es-erp-global

# ksqlDB Configuration
KSQLDB_ENDPOINT=http://localhost:8088

# Kafka Configuration for Docker Compose
KAFKA_API_URL=localhost:9092
KAFKA_API_KEY=
KAFKA_API_SECRET=

# Schema Registry Configuration for Docker Compose
KAFKA_SCHEMA_REG_API_URL=http://localhost:8081
KAFKA_SCHEMA_REG_API_KEY=
KAFKA_SCHEMA_REG_API_SECRET=

# Disable Kafka (set to true if you want to run without Kafka)
DISABLE_KAFKA=false

# Application Configuration
PORT=5001
GRAPHIQL_ENABLED=true
GENERATE_NEXUS_ARTIFACTS=false
LEVEL=stage
AUTH_COOKIE_NAME=es-erp-jwt

# Consumer Group IDs
KAFKA_WORKSPACE_CONSUMER_GROUP_ID=fleet-es-erp-workspace-consumer-v1
KAFKA_ASSETS_CONSUMER_GROUP_ID=fleet-es-erp-assets-consumer-v2
KAFKA_COMPANIES_CONSUMER_GROUP_ID=fleet-es-erp-companies-consumer-v2
KAFKA_USERS_CONSUMER_GROUP_ID=fleet-es-erp-users-consumer-v2
KAFKA_PIM_PRODUCTS_CONSUMER_GROUP_ID=fleet-es-erp-pim-products-consumer-v2
KAFKA_PIM_CATEGORIES_CONSUMER_GROUP_ID=fleet-es-erp-pim-categories-consumer-v2
KAFKA_RM_RESOURCES_CONSUMER_GROUP_ID=fleet-es-erp-rm-resources-consumer-v4

# Topic Names
KAFKA_FULFILMENTS_TOPIC_NAME=es-erp.private.fulfilments

# File Service Configuration (update with your actual values)
FILE_SERVICE_KEY=your-file-service-key
FILE_SERVICE_SECRET=your-file-service-secret
FILE_SERVICE_BUCKET=your-bucket-name

# OpenAI Configuration (optional)
OPENAI_API_KEY=
MAPBOX_ACCESS_TOKEN=


# Brave Search Configuration (optional)
BRAVE_SEARCH_API_KEY=

# Testing
IN_TEST_MODE=false

# Client URL
ERP_CLIENT_URL=http://localhost:3000

# SpiceDB
SPICEDB_TOKEN=somerandomkeyhere
